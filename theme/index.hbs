<!doctype html>
<html lang="{{ language }}">
    <head>
        <!-- API Book generated using mdBook -->
        <meta charset="utf-8">
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <title>{{ book_title }}</title>

        <meta name="description" content="{{ description }}">
        <meta name="theme-color" content="#ffffff" />

        <link rel="shortcut icon" href="{{ path_to_root }}{{ favicon }}">
        <link rel="stylesheet" href="{{ path_to_root }}app.css">

        <script src="{{ path_to_root }}app.js" type="text/javascript" charset="utf-8"></script>

        <!-- Highlight.js Stylesheets -->
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.18.1/styles/monokai-sublime.min.css">
    </head>
    <body class="index" data-languages='{{{lang_list}}}'>
        <a href="#" id="nav-button">
          <span>
            NAV
            <img src="navbar.png" alt="Navbar" />
          </span>
        </a>
        <div class="toc-wrapper">
          <img src="logo.png" class="logo" alt="Logo" />
          <div class="lang-selector">
            {{#each languages}}
                <a href="#" data-language-name="{{this.id}}">{{this.name}}</a>
            {{/each}}
          </div>

          <div class="search">
             <input type="text" class="search" id="input-search" placeholder="Search">
          </div>
          <ul class="search-results"></ul>

          {{#toc}}{{/toc}}

          <ul class="toc-footer">
             <li><a href='#'>Sign Up for a Developer Key</a></li>
             <li><a href='https://github.com/slatedocs/slate'>Documentation Powered by Slate</a></li>
          </ul>
        </div>

        <div class="page-wrapper">
          <div class="dark-box"></div>
          <div class="content">
            {{{ content }}}
          </div>
          <div class="dark-box">
              <div class="lang-selector">
                {{#each languages}}
                    <a href="#" data-language-name="{{this.id}}">{{this.name}}</a>
                {{/each}}
              </div>
          </div>
        </div>

        {{#if livereload}}
        <!-- Livereload script (if served using the cli tool) -->
        <script type="text/javascript">
            var socket = new WebSocket("{{{livereload}}}");
            socket.onmessage = function (event) {
                if (event.data === "reload") {
                    socket.close();
                    location.reload();
                }
            };
            window.onbeforeunload = function() {
                socket.close();
            }
        </script>
        {{/if}}

        <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.18.1/highlight.min.js"></script>
        <script>hljs.initHighlightingOnLoad();</script>

    </body>
</html>
